{
	"workbench.editor.showTabs": "multiple",
	"editor.minimap.enabled": false,

	// Silence the Noise
	"breadcrumbs.enabled": false,

	// Typography
	"editor.fontFamily": "Geist Mono, JetBrains Mono, Fira Code",
	"terminal.integrated.fontSize": 14,
	"explorer.sortOrder": "type",
	"editor.fontLigatures": true,

	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"source.fixAll.biome": "always",
		"source.organizeImports": "always",
		"source.action.useSortedAttributes.biome": "always"
	},

	"editor.formatOnSave": true,

	"editor.fontSize": 16,
	"workbench.activityBar.location": "hidden",
	"workbench.statusBar.visible": false,

	"editor.cursorBlinking": "expand",
	"editor.stickyScroll.enabled": false,
	"editor.lineHeight": 32,

	"material-icon-theme.saturation": 0,
	"vscode_custom_css.imports": [
		"file:///home/sejar/.vscode-custom-css.css",
		"file:///home/sejar/.vscode-custom-js.js"
	],
	"workbench.colorTheme": "Catppuccin Mocha",
	"workbench.iconTheme": "material-icon-theme",
	"workbench.sideBar.location": "right",
	"material-icon-theme.files.color": "#42a5f5",
	"workbench.tree.enableStickyScroll": false,
	"workbench.secondarySideBar.defaultVisibility": "hidden",
	"window.commandCenter": false,
	"workbench.editor.editorActionsLocation": "hidden",
	"workbench.layoutControl.enabled": false,
	"window.menuBarVisibility": "toggle",
	"chat.commandCenter.enabled": false,
	"window.titleBarStyle": "native",
	"window.customTitleBarVisibility": "never",
	"terminal.integrated.defaultProfile.linux": "fish",
	"terminal.integrated.stickyScroll.enabled": false,
	"terminal.integrated.fontFamily": "JetBrainsMono Nerd Font Mono",
	"explorer.compactFolders": false,
	"files.exclude": {
		"**/.next": false,
		"**/node_modules": false,
		"**/public": false,
		"**/.gitignore": false,
		"**/biome.json": false,
		"**/LICENSE": false,
		"**/components.json": false,
		"**/package.json": false,
		"**/tsconfig.json": false,
		"**/README.md": false,
		"**/next.config.mjs": false,
		"**/postcss.config.mjs": false,
		"**/next-env.d.ts": false,
		"**/pnpm-lock.yaml": false,
		"**/next.config.ts": false,
		"**/.env": false,
		"**/prisma.config.ts": false,
		"**/.swc": false,
		"**/.github": false,
		"**/bun.lock": false,
		"**/jest.config.ts": false,
		"**/jest.setup.ts": false,
		"**/next-auth.d.ts": false
	},
	"workbench.startupEditor": "none",
	"explorer.confirmDelete": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"explorer.confirmDragAndDrop": false
}
